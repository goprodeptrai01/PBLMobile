<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW PRODUCT"
        android:gravity="center"
        android:textColor="@color/hong"
        android:textStyle="bold"
        android:textSize="35sp"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp" />

    <GridLayout
        android:id="@+id/admin_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_addlaptop"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/laptop1"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/iv_addphone"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/iphone"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/iv_tablet"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/tablet"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/iv_watch"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/wristwatch"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/iv_headphone"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/headphone"
            android:layout_margin="12dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/diamond"
            android:layout_margin="12dp"/>

    </GridLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_maintain_product"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Maintain Products"
        android:textAllCaps="false"
        android:textSize="20dp"
        >

    </Button>

    <Button
        android:id="@+id/btn_admin_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textSize="20dp"
        >

    </Button>


</LinearLayout>