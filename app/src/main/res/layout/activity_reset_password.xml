<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/hong"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/tv_titlepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reset Password"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edt_yourNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edt_style"
        android:hint="Please write your phone number..."
        android:textSize="20sp"
        android:gravity="center"
        android:textColorHint="#706E6E"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="15dp" />\

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions?"
        android:textSize="27sp"
        android:gravity="center"
        android:layout_marginVertical="15dp" />

    <EditText
        android:id="@+id/edt_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edt_style"
        android:hint="Where your parents met, first time?"
        android:textSize="20sp"
        android:gravity="center"
        android:textColorHint="#706E6E"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/edt_question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edt_style"
        android:hint="What your favorite super hero?"
        android:textSize="20sp"
        android:gravity="center"
        android:textColorHint="#706E6E"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:backgroundTint="@color/hong"
        android:text="Verify"
        android:textSize="18sp"
        app:cornerRadius="15dp" />

</LinearLayout>